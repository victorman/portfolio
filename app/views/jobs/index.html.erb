
<h1>Listing jobs</h1>

<ul>
	<% Category.all.each do |category| %>
	<li><%= link_to category.name, category_jobs_path(category),
				class: "category", remote: true %></li>
	<% end %>
</ul>

<table>
  <thead>
    <tr>
      <th>Organization</th>
      <th>Location</th>
      <th>Details</th>
      <th>Start date</th>
      <th>End date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody id="jobs"><%= render "jobs" %></tbody>
</table>

<br>

<% if admin? %>
<div>
	<p><%= link_to 'New Job', new_job_path %></p>
</div>
<% end %>
