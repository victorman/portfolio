<div class="row">
	<%= render "layouts/user_jumbo" %>
</div>

<div class="row">
	<div class="col-xs-12">
		<ul class="nav nav-tabs nav-justified" role="tablist">
			<li role="presentation" class="active">
				<%=link_to "All", root_path, remote: true,
				role: :tab %>
			</li>
			<% Category.all.each do |category| %>
			<li role="presentation">
				<%= link_to category.name, category_jobs_path(category),
				class: "category", remote: true,
				 role: :tab %>
			</li>
			<% end %>
			<% if admin? %>
			<li role="presentation">
				<%= link_to new_category_path,
				 role: :tab do %>
					<span class="glyphicon glyphicon-plus" aria-hidden="true" aria-label="New Category"></span> 
				<% end %>
			</li>
			<% end %>
		</ul>
	</div>
</div>

	<div id="jobs" class="row">
		<%= render "jobs" %>
  	</div>
	<% if admin? %>
	<div>
		<%= link_to 'New Job', new_job_path, class: 'btn btn-primary' %>
	</div>
	<% end %>


<script>
	$("[role='tab']").click(function(e) {
		//e.preventDefault();
	    //e.stopPropagation();
		$(".nav-tabs li").removeClass('active');
		$(this).parent().addClass('active');
	});
</script>