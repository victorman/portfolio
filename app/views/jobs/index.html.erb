
<h1>Listing jobs</h1>

<div id="categories">
	<ul>
		<li><%=link_to "All", "/", remote: true %>
		<% Category.all.each do |category| %>
			<li><%= link_to category.name, category_jobs_path(category),
				class: "category", remote: true %></li>
		<% end %>
		<% if admin? %>
			<li><%= link_to 'New Category', new_category_path %></li>
		<% end %>
	</ul>
</div>

<div id="jobs">
	  <%= render "jobs" %>
</div>

<br>

<% if admin? %>
<div>
	<p><%= link_to 'New Job', new_job_path %></p>
</div>
<% end %>
